import { Router, Request, Response } from 'express';
import { getConnection } from '../config/database';
import { LoginRequest, LoginResponse, ClientData } from '../types';

const router = Router();

// POST /api/auth/login
router.post('/login', async (req: Request<{}, {}, LoginRequest>, res: Response<LoginResponse>) => {
  console.log('üìû POST /api/auth/login - received');
  console.log('   Body:', JSON.stringify(req.body, null, 2));
  
  try {
    const { phone } = req.body;

    // –í–∞–ª—ñ–¥–∞—Ü—ñ—è
    if (!phone || typeof phone !== 'string') {
      return res.status(400).json({
        success: false,
        message: '–ù–æ–º–µ—Ä —Ç–µ–ª–µ—Ñ–æ–Ω—É –æ–±–æ–≤\'—è–∑–∫–æ–≤–∏–π',
      });
    }

    // –ü–µ—Ä–µ–≤—ñ—Ä–∫–∞ —Ñ–æ—Ä–º–∞—Ç—É
    const cleanPhone = phone.trim();
    if (!cleanPhone.startsWith('+380') || cleanPhone.length !== 13) {
      return res.status(400).json({
        success: false,
        message: '–ù–µ–≤—ñ—Ä–Ω–∏–π —Ñ–æ—Ä–º–∞—Ç –Ω–æ–º–µ—Ä–∞ —Ç–µ–ª–µ—Ñ–æ–Ω—É',
      });
    }

    // –ü—ñ–¥–∫–ª—é—á–µ–Ω–Ω—è –¥–æ –ë–î
    const pool = await getConnection();
    
    // –í–∏–∫–ª–∏–∫ –ø—Ä–æ—Ü–µ–¥—É—Ä–∏ –∑ –ø—Ä–∞–≤–∏–ª—å–Ω–æ—é –Ω–∞–∑–≤–æ—é –ø–∞—Ä–∞–º–µ—Ç—Ä–∞
    const result = await pool
      .request()
      .input('PhoneNum', cleanPhone)
      .execute('AZIT.dbo.zeus_GetCli');

    // –û–±—Ä–æ–±–∫–∞ —Ä–µ–∑—É–ª—å—Ç–∞—Ç—É
    if (result.recordset && result.recordset.length > 0) {
      // –§—ñ–ª—å—Ç—Ä—É—î–º–æ –∑–∞–ø–∏—Å–∏: –±–µ—Ä–µ–º–æ —Ç—ñ–ª—å–∫–∏ –∑ –≤–∞–ª—ñ–¥–Ω–∏–º RECID
      const validRecords = result.recordset.filter((r: any) => r.RECID != null && r.F7 != null);
      
      if (validRecords.length === 0) {
        res.status(404).json({
          success: false,
          message: '–ö–ª—ñ—î–Ω—Ç–∞ –∑ —Ç–∞–∫–∏–º –Ω–æ–º–µ—Ä–æ–º –Ω–µ –∑–Ω–∞–π–¥–µ–Ω–æ',
        });
        return;
      }
      
      // –í–∏–±–∏—Ä–∞—î–º–æ –Ω–∞–π–∫—Ä–∞—â–∏–π –∑–∞–ø–∏—Å: –±–µ–∑ –¥—É–∂–æ–∫ —É F7, –∞–±–æ –∑ –Ω–∞–π–º–µ–Ω—à–æ—é –¥–æ–≤–∂–∏–Ω–æ—é
      const bestRecord = validRecords.reduce((best: any, current: any) => {
        const bestF7 = best.F7 || '';
        const currentF7 = current.F7 || '';
        
        // –Ø–∫—â–æ –ø–æ—Ç–æ—á–Ω–∏–π –∑–∞–ø–∏—Å –Ω–µ –º–∞—î –¥—É–∂–æ–∫, –∞ –Ω–∞–π–∫—Ä–∞—â–∏–π –º–∞—î - –±–µ—Ä–µ–º–æ –ø–æ—Ç–æ—á–Ω–∏–π
        if (!currentF7.includes('(') && bestF7.includes('(')) {
          return current;
        }
        
        // –Ø–∫—â–æ –æ–±–∏–¥–≤–∞ –º–∞—é—Ç—å –¥—É–∂–∫–∏ –∞–±–æ –æ–±–∏–¥–≤–∞ –±–µ–∑ - –±–µ—Ä–µ–º–æ –∫–æ—Ä–æ—Ç—à–∏–π
        if (currentF7.length < bestF7.length && !currentF7.includes('(')) {
          return current;
        }
        
        return best;
      });
      
      const record = bestRecord;
      
      // –û—Ç—Ä–∏–º—É—î–º–æ —ñ–º'—è –∑ —Ä—ñ–∑–Ω–∏—Ö –º–æ–∂–ª–∏–≤–∏—Ö –ø–æ–ª—ñ–≤
      let clientName = record.Name || record.ClientName || record.FullName || record.F7 || record.NAME;
      
      // –Ø–∫—â–æ –≤ —ñ–º–µ–Ω—ñ —î "(–ú–µ–Ω–µ–¥–∂–µ—Ä)" –∞–±–æ —ñ–Ω—à—ñ –¥—É–∂–∫–∏ - –≤–∏–¥–∞–ª—è—î–º–æ —ó—Ö
      if (clientName && typeof clientName === 'string') {
        clientName = clientName.replace(/\s*\([^)]*\)\s*/g, '').trim();
      }
      
      const clientData: ClientData = {
        clientId: record.ClientID || record.Id || record.ID || record.RECID,
        phone: cleanPhone,
        name: clientName,
        balance: record.Balance || record.BonusBalance || 0,
        level: record.Level || record.ClientLevel || '–ë—Ä–æ–Ω–∑–∞',
        email: record.Email,
        city: record.City || record.CityName,
        registeredAt: record.RegisteredAt || record.CreatedAt,
      };

      res.json({
        success: true,
        message: '–ö–ª—ñ—î–Ω—Ç–∞ –∑–Ω–∞–π–¥–µ–Ω–æ',
        data: clientData,
      });
    } else {
      // –ö–ª—ñ—î–Ω—Ç–∞ –Ω–µ –∑–Ω–∞–π–¥–µ–Ω–æ - –º–æ–∂–Ω–∞ –∞–≤—Ç–æ–º–∞—Ç–∏—á–Ω–æ —Å—Ç–≤–æ—Ä–∏—Ç–∏ –∞–±–æ –ø–æ–≤–µ—Ä–Ω—É—Ç–∏ –ø–æ–º–∏–ª–∫—É
      res.status(404).json({
        success: false,
        message: '–ö–ª—ñ—î–Ω—Ç–∞ –∑ —Ç–∞–∫–∏–º –Ω–æ–º–µ—Ä–æ–º –Ω–µ –∑–Ω–∞–π–¥–µ–Ω–æ',
      });
    }
  } catch (error: any) {
    console.error('‚ùå Login error:', error);
    res.status(500).json({
      success: false,
      message: '–ü–æ–º–∏–ª–∫–∞ —Å–µ—Ä–≤–µ—Ä–∞',
    });
  }
});

// GET /api/auth/check/:phone - –ü–µ—Ä–µ–≤—ñ—Ä–∫–∞ —ñ—Å–Ω—É–≤–∞–Ω–Ω—è –∫–ª—ñ—î–Ω—Ç–∞
router.get('/check/:phone', async (req: Request, res: Response) => {
  try {
    const { phone } = req.params;
    const pool = await getConnection();
    
    const result = await pool
      .request()
      .input('PhoneNum', phone)
      .execute('AZIT.dbo.zeus_GetCli');

    res.json({
      success: true,
      exists: result.recordset && result.recordset.length > 0,
    });
  } catch (error: any) {
    console.error('‚ùå Check error:', error);
    res.status(500).json({
      success: false,
      message: '–ü–æ–º–∏–ª–∫–∞ —Å–µ—Ä–≤–µ—Ä–∞',
      error: error.message,
    });
  }
});

export default router;
