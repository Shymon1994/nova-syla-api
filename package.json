{
  "name": "nova-syla-api",
  "version": "1.0.0",
  "description": "Nova Syla Loyalty API Server",
  "main": "dist/server.v2.js",
  "scripts": {
    "start": "node railway-start.js",
    "start:direct": "node dist/server.v2.js",
    "start:v1": "node dist/server.js",
    "start:dev": "npm run build && start-server.bat",
    "stop": "stop-server.bat",
    "dev": "ts-node-dev --respawn --transpile-only src/server.v2.ts",
    "dev:v1": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc && node -e \"require('fs').copyFileSync('src/sql-proxy-client.js', 'dist/sql-proxy-client.js')\"",
    "build:v2": "tsc src/server.v2.ts --outDir dist"
  },
  "keywords": [
    "api",
    "loyalty"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.3",
    "mssql": "^10.0.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mssql": "^9.1.4",
    "@types/node": "^20.10.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
